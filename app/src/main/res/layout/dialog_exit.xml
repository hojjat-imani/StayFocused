<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@null"
        android:padding="@dimen/space_low"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_medium"
        android:paddingLeft="@dimen/space_xlarge"
        android:paddingRight="@dimen/space_xlarge"
        android:paddingTop="@dimen/space_low"
        android:gravity="right">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size_medium"
            android:text="New Text"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_title_text_size" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/dialog_message_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_buttons_panel_size"
            android:gravity="center_vertical">

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_buttons_size"
                android:layout_alignParentLeft="true"
                android:background="@color/primary"
                android:minWidth="0dp"
                android:text="ok">

            </com.gc.materialdesign.views.ButtonFlat>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_buttons_panel_size"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_buttons_size"
                android:layout_alignParentLeft="true"
                android:background="@color/primary"
                android:text="rate">

            </com.gc.materialdesign.views.ButtonFlat>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_buttons_panel_size"
            android:gravity="center_vertical">

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_buttons_size"
                android:layout_alignParentLeft="true"
                android:background="@color/primary"
                android:text="cancel">

            </com.gc.materialdesign.views.ButtonFlat>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>