<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_xlarge"
    android:paddingRight="@dimen/space_xlarge"
    android:paddingTop="@dimen/space_xlarge">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_title_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_medium">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/space_low"
            android:layout_alignParentTop="true" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/space_low"
            android:layout_below="@+id/option1" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/space_low"
            android:layout_below="@+id/option2" />


        <TextView
            android:id="@+id/option1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/option1"
            android:layout_alignBottom="@+id/option1"
            android:layout_toLeftOf="@+id/option1"
            android:layout_toStartOf="@+id/option1"
            android:text="option1"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_message_text_size" />

        <TextView
            android:id="@+id/option2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/option2"
            android:layout_alignBottom="@+id/option2"
            android:layout_toLeftOf="@+id/option2"
            android:text="option2"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_message_text_size" />

        <TextView
            android:id="@+id/option3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/option3"
            android:layout_alignBottom="@+id/option3"
            android:layout_toLeftOf="@+id/option3"
            android:layout_toStartOf="@+id/option3"
            android:text="option3"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_message_text_size" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_buttons_panel_size"
        android:gravity="center_vertical">

        <com.gc.materialdesign.views.ButtonFlat
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_buttons_size"
            android:layout_alignParentLeft="true"
            android:background="@color/primary"
            android:id="@+id/ok"
            android:text="ok"
            android:minWidth="0dp">

        </com.gc.materialdesign.views.ButtonFlat>

        <com.gc.materialdesign.views.ButtonFlat
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_buttons_size"
            android:layout_toRightOf="@+id/ok"
            android:background="@color/primary"
            android:id="@+id/cancel"
            android:text="cancel"
            >

        </com.gc.materialdesign.views.ButtonFlat>
    </RelativeLayout>

</LinearLayout>